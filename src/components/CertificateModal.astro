---
// Componente Modal para mostrar certificados
---

<div id="certificateModal" class="fixed inset-0 backdrop-blur-xs z-50 hidden items-center justify-center p-2 sm:p-4 transition-all duration-300 ease-in-out opacity-0">
    <div class="bg-gray-900 rounded-lg shadow-xl max-w-xs sm:max-w-2xl w-full max-h-[95vh] sm:max-h-[90vh] overflow-hidden transform transition-all duration-300 ease-in-out scale-95 translate-y-4">
        <!-- Header del modal -->
        <div class="flex items-center justify-between p-4 sm:p-6 border-b border-gray-700">
            <h3 class="text-lg sm:text-xl font-semibold text-white" id="modalTitle">
                Certificado
            </h3>
            <button 
                id="closeModal" 
                class="text-gray-400 hover:text-white transition-colors duration-200 cursor-pointer"
                aria-label="Cerrar modal"
            >
                <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>
        
        <!-- Contenido del modal -->
        <div class="p-4 sm:p-6">
            <div class="flex justify-center">
                <div class="w-full max-w-sm sm:max-w-lg h-64 sm:h-96 bg-gray-800 rounded-lg overflow-hidden flex items-center justify-center">
                    <img 
                        id="modalImage" 
                        src="" 
                        alt="Certificado" 
                        class="max-w-full max-h-full object-contain"
                    />
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Declarar tipos para evitar errores de TypeScript
    interface Certificate {
        title: string;
        image: string;
    }
    
    interface Certificates {
        [key: string]: Certificate;
    }

    // Datos de los certificados
    const certificates: Certificates = {
        'intermediate-python': {
            title: 'Intermediate Python for Developers - DataCamp',
            image: '/certificados/Intermediate Python for Developers-DataCamp_page-0001.jpg'
        },
        'introduction-python': {
            title: 'Introduction to Python for Developers - DataCamp',
            image: '/certificados/Introduction to Python for Developers-DataCamp_page-0001.jpg'
        },
        'programador': {
            title: 'Programador - Ministerio de Educación de Córdoba',
            image: '/certificados/Programador.jpeg'
        }
    };

    // Función para abrir el modal
    function openCertificateModal(certificateId: string): void {
        const modal = document.getElementById('certificateModal') as HTMLElement;
        const modalTitle = document.getElementById('modalTitle') as HTMLElement;
        const modalImage = document.getElementById('modalImage') as HTMLImageElement;
        const modalContent = modal?.querySelector('.bg-gray-900') as HTMLElement;
        
        if (!modal || !modalTitle || !modalImage || !modalContent) return;
        
        const certificate = certificates[certificateId];
        if (certificate) {
            modalTitle.textContent = certificate.title;
            modalImage.src = certificate.image;
            modalImage.alt = certificate.title;
            
            // Mostrar el modal
            modal.classList.remove('hidden');
            modal.classList.add('flex');
            
            // Forzar reflow para que las transiciones funcionen
            modal.offsetHeight;
            
            // Aplicar clases de animación de entrada
            modal.classList.remove('opacity-0');
            modal.classList.add('opacity-100');
            modalContent.classList.remove('scale-95', 'translate-y-4');
            modalContent.classList.add('scale-100', 'translate-y-0');
            
            // Prevenir scroll del body pero mantener scrollbar visible
            document.body.style.overflow = 'hidden';
            document.body.style.overflowX = 'hidden';
            document.body.style.overflowY = 'scroll'; // Mantener scrollbar vertical visible
            document.body.style.width = '100%';
            document.body.style.maxWidth = '100vw';
        }
    }

    // Función para cerrar el modal
    function closeCertificateModal(): void {
        const modal = document.getElementById('certificateModal') as HTMLElement;
        const modalContent = modal?.querySelector('.bg-gray-900') as HTMLElement;
        
        if (!modal || !modalContent) return;
        
        // Aplicar clases de animación de salida
        modal.classList.remove('opacity-100');
        modal.classList.add('opacity-0');
        modalContent.classList.remove('scale-100', 'translate-y-0');
        modalContent.classList.add('scale-95', 'translate-y-4');
        
        // Esperar a que termine la animación antes de ocultar
        setTimeout(() => {
            modal.classList.add('hidden');
            modal.classList.remove('flex');
            
            // Restaurar scroll del body de manera más segura
            document.body.style.overflow = '';
            document.body.style.overflowX = 'hidden';
            document.body.style.overflowY = ''; // Restaurar scroll vertical normal
            document.body.style.width = '100%';
            document.body.style.maxWidth = '100vw';
        }, 300); // Duración de la animación
    }

    // Event listeners
    document.addEventListener('DOMContentLoaded', function() {
        const modal = document.getElementById('certificateModal');
        const closeBtn = document.getElementById('closeModal');
        
        if (!modal || !closeBtn) return;
        
        // Cerrar con el botón X
        closeBtn.addEventListener('click', closeCertificateModal);
        
        // Cerrar al hacer click fuera del modal
        modal.addEventListener('click', function(e) {
            if (e.target === modal) {
                closeCertificateModal();
            }
        });
        
        // Cerrar con la tecla Escape
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
                closeCertificateModal();
            }
        });
    });

    // Hacer la función global para que pueda ser llamada desde otros componentes
    (window as any).openCertificateModal = openCertificateModal;
</script>
